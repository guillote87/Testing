<%- include("./partials/header.ejs",{css : "/css/productDetail.css"})%>
<main>
    <section class="interes">
        <h2>Tambien podría interesarte</h2>
        <% for (let i=0; i < 4 ; i++) { %>
        <div class="contenedor-interes">
            <div>
                <a href="/products/<%= interes[i].id%>"><img class="imagen-interes" src="/images/productos/<%= interes[i].image %>" alt="Buzo"></a>
            </div>
            <div class="info-interes">
                <h3 class="titulo-interes"><%= interes[i].name %></h3>
                <p class="precio-interes">$ <%= interes[i].price %></p>
                <p class="talle-interes">Talles disponibles</p>
                <div class="div-talle">
                    <p>S</p>
                    <p>M</p>
                    <p>XL</p>
                </div>

            </div>

        </div>
        <% } %>
    </section>
    <section class="producto">
        <div class="ruta">
            <a href="#">Inicio </a>
            <p> > </p> <a href="#">Remeras </a>
            <p> > </p> <a href="#">Artistas musicales </a>
            <p> > </p> <a href="#">Radiohead </a>
            <p> > </p> <a href="#">Remera Radiohead</a>
        </div>
        <div class="titulo-producto">
            <input class= "sin-formato" type="text" name=name value=<%= product.name %> </input>
            <h2><%= product.name %></h2>
        </div>
        <div class="contenedor-fotos">
            <div class="remeras-lateral">
                <a href="#"><img class="remera2" src="/images/productos/<%= product.image%>" alt="Blanca"></a>
                <a href="#"><img class="remera2" src="/images/productos/<%= product.image2%>" alt="Blanca"></a>
            </div>
            <img class="remera" src="/images/productos/<%= product.image%>" alt="#">
        </div>
    </section>
    <section class="detalles">
        <div class="precio">
            <div class="edit">
                <a href="/products/edit/<%= product.id%>"><i class="fas fa-edit"></i></a>
                <form action="/products/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                    <button type="submit" class="action-button delete"><i class="fas fa-trash-alt"></i></button>
                  
                </form>
            </div>
           
            <h2><%= product.description%></h2> <br>
            <br>
            <h2>$ <%= product.price%></h2><span>x 6 cuotas sin interés</span>
        </div>
        <form action="#" method="POST" class="form">
            <label for="talle"></label>
            <select class="talle" name="talle" id="talle">
                <option>Talle</option>
                <option value="s">S</option>
                <option value="m">M</option>
                <option value="l">L</option>
                <option value="xl">XL</option>
            </select>
            <label for="color"></label>
            <select class="color" name="color" id="color">
                <option>Color</option>
                <option value="negro">Negro</option>
                <option value="blanco">Blanco</option>
            </select>
            <label for="cantidad"></label>
            <select class="cantidad" name="cantidad" id="cantidad">
                <option>Cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </form>
        <div class="boton">
                <form action="/users/cart/<%= product.id%>" method="POST" style="display: inline-flex">
                <button type="submit">Agregar al Carrito</button>
            </form>
        </div>
        <div class="contenedor-mercado">
            <img class="mercado" src="/images/mercado-pago.png" alt="Mercado Pago">
        </div>
    </section>
</main>
<footer>

    <form class="create-form" action="/users/cart/<%= product.id%>?_method=PUT" method="POST">
        <div class="control-form">
            <input name="name" type="text" value = "<%= product.name %>" class="control" placeholder="Nombre de tu producto">
        </div>
        <div class="control-form">
            <input name="description" type="text" value="<%= product.description %>"class="control">
        </div>
        <div class="control-form">
            <input name="image" type="file" value="<%= product.image %>" accept=".jpg, .png" class="control">
        </div>
        <div class="control-form">
            <input name="image2" type="file" value="<%= product.image2 %>" accept=".jpg, .png" class="control">
        </div>
        <div class="control-form">
            <select name="category" value="<%= product.category %>" class="control">
                <option value="music">Musica</option>
                <option value="movies">Peliculas</option>
            </select>
        </div>
        <div class="control-form">
            <select name="color" value="<%= product.color %>" class="control">
                <option value="Negro">Negro</option>
                <option value="Gris">Gris</option>
                <option value="Blanco">Blanco</option>
            </select>
        </div>
        <div class="control-form">
            <select name="size"value="<%= product.size %>" class="control">
                <option>Talle</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>
        </div>
        <div class="control-form">
            <input name="price" type="tel" value="<%= product.price %>" placeholder="Precio" class="control">
        </div>
        <button type="submit" class="control">Agregar</button>
    </form>
    <section>
        <h3>Copyright © 1999-2020 Nicotine S.R.L.</h3>
        <div class="iconos-redes">
            <a href="#"><i class="lni lni-instagram-original"></i></a>
            <a href="#"><i class="lni lni-facebook-original"></i></a>
            <a href="#"><i class="lni lni-twitter-original"></i></a>
        </div>
    </section>
</footer>
</body>

</html>