<%- include("./partials/header.ejs",{css : "/css/register.css"})%> 
  <main>
        <section>
            <div class="register-box">
                <h2>¡Crea tu cuenta y elegí tu diseño favorito!</h2>
                <form action="#" method="POST" class="register-form">
                    <div class="control-form">
                        <input type="text" name="name" class="control" placeholder="Ingresá tu nombre y apellido">
                    </div>
                    <div class="control-form">
                        <input type="email" name="email" class="control" placeholder="Ingresá un e-mail">
                    </div>
                    <div class="control-form">
                        <input type="password" name="pass" class="control" placeholder="Elegí una contraseña">
                    </div>
                    <div class="control-form">
                        <input type="password" name="pass" class="control" placeholder="Repetí la contraseña">
                    </div>
                    <div class="control-form">
                        <label class="control">
                            <h2>Pone tu cumpleaños</h2>
                            <input type="date" name="birthday" min="1921-01-01" class="control">
                        </label>
                    </div>
                    <button type="submit" class="send-button">Enviar</button>
                </form>
            </div>
        </section>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>

</html>